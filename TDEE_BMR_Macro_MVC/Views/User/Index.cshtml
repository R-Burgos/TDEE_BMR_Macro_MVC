@model TDEE_BMR_Macro_MVC.Models.UserModel

<h4>Find out your TDEE / BMR/ Macros</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserCalculatedInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityLevel" class="control-label"></label>
                <input asp-for="ActivityLevel" class="form-control" />
                <span asp-validation-for="ActivityLevel" class="text-danger"></span>
            </div>
            <div class="form-check form-check-inline">
                <label asp-for="Gender" class="form-check-label">Male</label>
                <input asp-for="Gender" class="form-check-input" type="radio" value="male"/>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-check form-check-inline">
                <label asp-for="Gender" class="form-check-label">Female</label>
                <input asp-for="Gender" class="form-check-input" type="radio" value="female" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!--I want to pick from a list of options correlating to the CalorieTargetModifier -->
                <!-- (1)Aggressive Cut/(2)Mild Cut/(3)Maintnenance/(4)Mild Bulk/(5)Aggressive Bulk-->
                <!--I want the words to be seen and the integeres are what is sent-->
                <label asp-for="CalorieTargetModifier" class="control-label"></label>
                <input asp-for="CalorieTargetModifier" class="form-control" />
                <span asp-validation-for="CalorieTargetModifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!--I want to pick from a list of options correlating to the CarbLevel-->
                <!--(1)Moderate/(2)Low/(3)High-->
                <!--I want the words to be seen and the integeres are what is sent-->
                <label asp-for="CarbLevel" class="control-label"></label>
                <input asp-for="CarbLevel" class="form-control" />
                <span asp-validation-for="CarbLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
